extends default

block content

    #clouds
        .cloud.x1
        .cloud.x2
        .cloud.x3
        .cloud.x4
        .cloud.x5

    //button(data-bs-toggle='modal', data-bs-target='#exampleModal', onclick="addPlant()") Create new plant

    // Modal
    #exampleModal.modal.fade(tabindex='-1', aria-labelledby='exampleModalLabel', aria-hidden='true')
        .modal-dialog
            .modal-content
                .modal-header
                    h1#exampleModalLabel.modal-title.fs-5 Modal title
                    button.btn-close(type='button', data-bs-dismiss='modal', aria-label='Close')
                .modal-body
                    form#form1
                        .mb-3
                            label.form-label(for='plantId') Plant ID
                            input#plantId.form-control(type='text', aria-describedby='plantName', placeholder='Plant Name')
                        .mb-3
                            label.form-label(for='plantInput') Plant Name
                            input#plantInput.form-control(type='text', placeholder='PlantID')
                    form#form2(method='POST', action='/', enctype='multipart/form-data')
                        div
                            label name
                            input(type='text', name='picname', required='')
                        div
                            label Upload profile picture
                            input(type='file', name='profile-file', required='')
                        div
                            input(type='submit', value='Upload')
                .modal-footer
                    button.btn.btn-secondary(type='button', data-bs-dismiss='modal') Close
                    button.btn.btn-primary(type='button', onclick="addPlant()") Save changes

    h4#total.my-4

    #noneReturned

    ul#demo.my-2

    script.
        async function off() {
            document.getElementById('overlay').style.display = "none";
        }

    #overlay(style="display:none;")
        .window(style='margin: 32px; width: 30vw;')
            .title-bar
                .title-bar-text
                    | Error Code 429
                .title-bar-controls
                    //button(aria-label='Minimize')
                    //button(aria-label='Maximize')
                    //button(aria-label='Close')
            .window-body
                img(src='/static/images/confused.jpg')
                h3 Not enough money!
                section.field-row(style='justify-content: flex-end')
                    button(onclick="off()") OK
                    //button Cancel

    .row.row-cols-1.row-cols-md-3.g-4
        each plant of plants

                .col
                    .card
                        img.card-img-top(src='/static/images/' + plant[2] + '.jpg', alt=plant[2])
                        .card-body
                            h5.card-title= plant[2]
                            .card-text
                                .information#info(blockID=`${plant[1]}` style='display: none;')
                                    #commonName(commonName=`${plant[1]}`)
                                        .name Common Name:
                                    #scientific(scientific=`${plant[1]}`)
                                        .name Scientific Name:
                                    #sunlight(sunlight=`${plant[1]}`)
                                        .name Sunlight:
                                    #watering(watering=`${plant[1]}`)
                                        .name Watering:
                                    #propagation(propagation=`${plant[1]}`)
                                        .name Propagation:
                            hr
                            section.field-row(style='justify-content: flex-end')
                                button.btn.btn-outline-secondary(onclick=`get_info(${plant[1]})`) More Info
                                button.btn.btn-outline-secondary#toDelete(data-uuid= `${plant[0]}` onclick= `removePlant()`) Delete Plant