include default

    //link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Quicksand')
    link(rel='stylesheet' type="text/css" href='/static/css/nursery.css')

    h1.nursery The Nursery

    hr

    .row.row-cols-1.row-cols-md-3.g-4
        each plant of plants
            if plant[4] === 'baby'
                .col
                    .card
                        img.card-img-top(src='/static/images/' + plant[2] + '.jpg', alt=plant[2])
                        hr
                        .card-body
                            h5.card-title= plant[2]
                            .card-text
                                lead= plant[5]
                                    i.fa-solid.fa-cake-candles.mx-1
                                .lead Last Water&nbsp
                                    i.fa-solid.fa-droplet
                                p= plant[3]
                            hr
                            .d-flex.flex-column
                                //button.btn.btn-outline-secondary.my-1#toDelete(data-uuid= `${baby[0]}` onclick= `removeBaby()`) Delete Plant
                                button.btn.btn-outline-secondary.my-1#toWater(data-water= `${plant[0]}` onclick= `water(this.getAttribute('data-water'))`) Water! &nbsp;
                                    i.fa-solid.fa-droplet
                                .dropdown
                                    a.btn.btn-outline-secondary.dropdown-toggle(href='#', role='button', data-bs-toggle='dropdown', aria-expanded='false')
                                        | More
                                    ul.dropdown-menu
                                        li
                                            a.dropdown-item#greenhouse(data-greenhouse= `${plant[0]}` href='#' onclick= `greenhouse(this.getAttribute('data-greenhouse'))` ) Move to Greenhouse &nbsp
                                                i.fa-solid.fa-house
                                        li
                                            a.dropdown-item#graveyard(data-graveyard= `${plant[0]}` href='#' onclick= `graveyard(this.getAttribute('data-graveyard'))`) Move to Graveyard &nbsp
                                                i.fa-solid.fa-plant-wilt
                                        li
                                            a.dropdown-item#toDelete(href='#' data-uuid= `${plant[0]}` onclick= `removePlant(this.getAttribute('data-uuid'))`) Delete Plant &nbsp
                                                .fa-solid.fa-circle-xmark
